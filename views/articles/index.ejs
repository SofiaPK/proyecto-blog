<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
</head>
<body>
    <div>
        <a role="button" class="btn btn-outline-primary btn-sm ms-3 mt-3" href="/users/new">Crear usuario</a>
        <a role="button" class="btn btn-outline-primary btn-sm ms-1 mt-3">Ingresar</a>
    </div>
    <%-include('../common/_index.ejs')%>
    <div class="container mx-auto">
        <div class="container d-flex mb-3 justify-content-center">
            <a class="btn btn-outline-success ms-auto p-2" href="/articles/new" role="button">
                <i class="bi bi-pencil"> Escribir</i>
            </a>
        </div>
        <% articles.forEach(article => { %>
            <div class="card border-light mx-auto"  style="max-width:800px;">
                <div class="card-header pt-3 bg-transparent">
                    <h4 class="card-title" style="text-align: center">
                        <%= article.title %>
                    </h4>
                </div>
                <div class="card-body">
                  <blockquote class="blockquote mx-0">
                    <p> <%= article.description %> </p>
                    <footer class="blockquote-footer mt-2"><%= article.author %>. <cite title="Source Title"><%= article.markdown %></cite></footer>
                  </blockquote>
                </div>
                <div class="d-flex justify-content-end m-3">
                    <a class="btn btn-outline-secondary me-md-2" href="/articles/<%= article.slug%>" role="button">
                        Ver +
                    </a>
                    <a class="btn btn-outline-secondary me-md-2" href="/articles/edit/<%= article.id%>" role="button">
                        Editar
                    </a>
                    <form action="/articles/<%= article.id%>?_method=DELETE" method="POST">
                        <button type="submit" class="btn btn-outline-danger me-md-2">
                            <i class="bi bi-trash-fill"> Eliminar</i>
                        </button>
                    </form>
                </div>
            </div>
