<div class="container mx-auto" style="width: 500px;">
    <div class="mb-3 p-3">
        <label for="name" class="name">Nombre de usuario:</label>
        <input required type="text" class="form-control" id="name" name="name" value="" placeholder="Escriba un nombre de usuario">
    </div>
    <div class="mb-3 p-3">
        <label for="email" class="email">Email:</label>
        <input required type="email" class="form-control" id="email" name="email" value="" placeholder="email@dominio.com">
    </div>
    <div class="mb-3 p-3">
        <label for="password" class="user-name">Contraseña:</label>
        <input required type="password" class="form-control" id="password" name="password" value="" placeholder="Escriba una contraseña">
    </div>
    <br>
    <button type="submit" class="btn btn-outline-success ms-3">
        <i class="bi bi-person-plus-fill"></i>
        Crear
    </button>
</div>